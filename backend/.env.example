PORT=4000
NODE_ENV=development

# Database Config
DB_NAME=opendesk
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# JWT Config
JWT_SECRET=your_secret_key_here
JWT_EXPIRATION=1d

# Email Config (for email-to-ticket and notifications)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@example.com
EMAIL_PASS=your-email-password
FROM_EMAIL=noreply@opendesk.com

# SendGrid Config (alternative to SMTP)
SENDGRID_API_KEY=your-sendgrid-api-key

# Redis Config (for email queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Application Config
BASE_URL=http://localhost:3000

# File Upload Config
MAX_FILE_SIZE=5242880 # 5MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain

# Logging
LOG_LEVEL=info
